{
    //
    // VSCode settings
    //
    "diffEditor.ignoreTrimWhitespace": false,

    "editor.accessibilitySupport": "off",
    "editor.fontFamily": "'JetBrains Mono', 'Fira Code', 'Fira Mono', 'Noto Mono', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.fontWeight": "400",
    "editor.lineHeight": 0,
    "editor.linkedEditing": true,
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.rulers": [
        80,
        100
    ],
    "editor.suggestSelection": "first",
    "editor.tabSize": 2,

    "explorer.compactFolders": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.incrementalNaming": "smart",
    "explorer.openEditors.visible": 0,

    "extensions.ignoreRecommendations": true,

    "files.associations": {
        "*.txt": "plaintext",
        "*.jsm": "javascript"
    },
    "files.autoSave": "onFocusChange",
    "files.exclude": {
        "**/.classpath": true,
        "**/.idea": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true,
        "**/__pycache__": true
    },

    "git.autofetch": true,
    "git.confirmSync": false,
    "git.path": "/usr/local/bin/git",

    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,

    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font Mono",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontWeight": "400",
    "terminal.integrated.scrollback": 10000,
    "terminal.integrated.shell.osx": "/bin/zsh",

    "update.showReleaseNotes": false,

    "window.autoDetectColorScheme": true,
    "window.restoreWindows": "none",
    "window.title": "${activeEditorShort}${separator}${rootPath}",
    "window.titleBarStyle": "native",
    "window.zoomLevel": 0,

    "workbench.activityBar.visible": true,
    "workbench.colorTheme": "Atom One Light",
    "workbench.enableExperiments": false,
    "workbench.fontAliasing": "antialiased",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.preferredDarkColorTheme": "Material Theme Darker High Contrast",
    "workbench.preferredHighContrastColorTheme": "Material Theme Darker High Contrast",
    "workbench.preferredLightColorTheme": "Atom One Light",
    "workbench.productIconTheme": "icons-carbon",
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.tips.enabled": false,


    //
    // Language-specific settings (incl. language extension)
    //
    "[c]": {
        "editor.rulers": [
            80
        ],
        "editor.tabSize": 4
    },
    "cmake.configureOnOpen": true,

    "[html]": {
        "editor.rulers": [
            100,
            120
        ]
    },
    "html.format.endWithNewline": true,
    "html.format.templating": true,

    "go.formatTool": "gofmt",
    "go.useLanguageServer": true,

    "[javascript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },

    "[jekyll]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },

    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },

    "[markdown]": {
        "editor.rulers": [
            80
        ],
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 80
    },

    "markdown.preview.lineHeight": 1.5,

    "[python]": {
        "editor.rulers": [
            88
        ]
    },
    "python.analysis.completeFunctionParens": true,
    "python.analysis.logLevel": "Warning",
    "python.analysis.typeCheckingMode": "strict",
    "python.experiments.enabled": false,
    "python.formatting.provider": "black",
    "python.languageServer": "Pylance",
    "python.linting.enabled": true,
    "python.poetryPath": "~/.poetry/bin/poetry",
    "python.pythonPath": "~/.pyenv/shims/python",
    "python.showStartPage": false,
    "python.testing.autoTestDiscoverOnSaveEnabled": false,
    "python.testing.promptToConfigure": false,
    "python.venvPath": "~/Library/Caches/pypoetry/virtualenvs",

    "[svelte]": {
        "editor.defaultFormatter": "svelte.svelte-vscode"
    },

    "typescript.npm": "/usr/local/bin/npm",


    //
    // Extension settings
    //
    "discord.silent": true,
    "discord.workspaceElapsedTime": true,

    "emmet.includeLanguages": {
        "jekyll": "html",
        "scss": "css"
    },

    "eslint.lintTask.enable": true,
    "eslint.packageManager": "yarn",

    "gitblame.ignoreWhitespace": true,
    "gitblame.statusBarMessageFormat": "${author.name} (${time.ago})",
    "gitblame.statusBarMessageNoCommit": "Not committed yet",

    "liveServer.settings.donotShowInfoMsg": true,

    "material-icon-theme.activeIconPack": "none",
    "material-icon-theme.showWelcomeMessage": false,

    "npm.packageManager": "yarn",

    "remote.SSH.useFlock": false,

    "vscode-typograf.autoDetectLocale": false,
    "vscode-typograf.locale": "en-GB"
}